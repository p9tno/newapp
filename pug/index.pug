                .btn-group
                    button.btn.btn-orange
                        i.icon-in
                    button.btn.btn-orange
                        i.icon-burger
                    button.btn.btn-orange
                        i.icon-flag
                .btn-group
                    button.btn.btn-purple
                        i.icon-in
                    button.btn.btn-purple
                        i.icon-burger
                    button.btn.btn-purple
                        i.icon-flag
                .btn-group
                    button.btn.btn-blue
                        i.icon-in
                    button.btn.btn-blue
